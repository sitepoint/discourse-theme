{{! CHANGE MANIFEST:
= Root: app/assets/javascripts/discourse/templates/navigation/category.hbs
=
= (1) Added .btn-primary to create topic button
= (2) Private Message Customization
= (*) Other syntax changes to make it easier to read
=}}
{{bread-crumbs categories=categories
               category=category
               noSubcategories=noSubcategories
               hideSubcategories=showingSubcategoryList}}

{{navigation-bar navItems=navItems filterMode=filterMode}}

{{#if currentUser}}
  {{category-notifications-button category=category}}
{{/if}}

{{#if canCreateTopic}}
  {{! SP (1) }}

    {{d-button id="create-topic" class="btn-default btn-primary" action="createTopic" icon="plus" label="topic.create"}}

  {{! /SP }}
{{/if}}

{{#if currentUser}}
  {{! SP (2) }}

  {{d-button id="create-private-message" class="btn-default" action="composePrivateMessage" icon="envelope" label="user.private_message"}}

  {{! /SP }}
{{/if}}

{{#if canEditCategory}}
  {{d-button class="btn-default edit-category" action="editCategory" actionParam=category icon="wrench" label="category.edit_long"}}
{{/if}}

<section class='category-heading'>
  {{#if category.logo_url}}
    {{cdn-img src=category.logo_url class="category-logo"}}
    {{#if category.description}}
      <p>{{{category.description}}}</p>
    {{/if}}
  {{/if}}
</section>
